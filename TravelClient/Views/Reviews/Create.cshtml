@{
  Layout = "_Layout";
}

@model TravelClient.Models.Review

<h4>Add a new review</h4>
<div>
  @using (Html.BeginForm())
  {
    <div class="form-group">
      @Html.LabelFor(model => model.City)
      @Html.TextBoxFor(model => model.City, new { @class="form-control", placeholder="City", required="required" })
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Description)
      @Html.TextBoxFor(model => model.Description, new { @class="form-control", placeholder="Description", required="required" })
    </div>
    <div class="form-group">
      @Html.LabelFor(model => model.Rating)
      @Html.TextBoxFor(model => model.Rating, new { @class="form-control", placeholder="Rating", required="required" })
    </div>

    <input type="submit" value="Add New Review" class="btn btn-info" />
  }
</div>

<br>
@Html.ActionLink("Back to Reviews", "Index", new { }, new { @class = "btn btn-primary"})